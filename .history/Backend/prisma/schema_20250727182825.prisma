generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  tarefas   Tarefa[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")  // Mapeia para tabela "user" (min√∫sculo)
}

model Tarefa {
  id          String    @id @default(cuid())
  title       String
  description String
  priority    Priority  @default(Alta)
  status      Status    @default(Pendente)
  date        DateTime? 
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum Priority {
  Alta
  Media
  Baixa
}

enum Status {
  Pendente
  Em_Andamento
  Concluida
}
